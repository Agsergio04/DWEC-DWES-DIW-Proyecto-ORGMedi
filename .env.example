# Archivo .env de ejemplo para Docker
# Copiar a .env y ajustar valores según necesidad

# Backend
SPRING_PROFILES_ACTIVE=docker
JWT_SECRET=tu_clave_secreta_muy_larga_para_produccion_0123456789ABCDEF
JWT_EXPIRATION=86400000

# Base de datos (H2)
SPRING_DATASOURCE_URL=jdbc:h2:mem:orgmedi;DB_CLOSE_DELAY=-1;DB_CLOSE_ON_EXIT=FALSE
SPRING_DATASOURCE_USERNAME=sa
SPRING_DATASOURCE_PASSWORD=

# O para MySQL (descomentar y ajustar)
# SPRING_DATASOURCE_URL=jdbc:mysql://mysql:3306/orgmedi?useSSL=false&serverTimezone=UTC
# SPRING_DATASOURCE_USERNAME=root
# SPRING_DATASOURCE_PASSWORD=tu_contraseña_mysql

# JPA
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=false

# Logging
SPRING_LOG_LEVEL=INFO
ORGMEDI_LOG_LEVEL=DEBUG

# Frontend
NGINX_HOST=localhost
NGINX_PORT=80

# Timeouts
CONNECTION_TIMEOUT=30000
READ_TIMEOUT=30000
