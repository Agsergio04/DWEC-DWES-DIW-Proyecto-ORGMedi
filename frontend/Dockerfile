# Stage 1: Build
FROM node:20-alpine AS builder

WORKDIR /app

# Copiar package.json y package-lock.json
COPY package*.json ./

# Instalar dependencias
RUN npm install

# Copiar c칩digo fuente
COPY . .

# Construir la aplicaci칩n Angular
RUN npm run build

# Stage 2: Runtime con Nginx
FROM nginx:alpine

# Copiar configuraci칩n de Nginx
COPY nginx.conf /etc/nginx/nginx.conf

# Copiar archivos construidos desde el stage anterior
COPY --from=builder /app/dist/Proyecto/browser /usr/share/nginx/html

# Copiar carpeta public (archivos est치ticos)
COPY public /usr/share/nginx/html/public

# Exponer puerto
EXPOSE 80

# Comando para ejecutar Nginx
CMD ["nginx", "-g", "daemon off;"]
